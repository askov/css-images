extends ../layouts/default.pug

block vars
  - var title = 'Stan Marsh'
  - var style = "sp_stan"

block content
  .stan
    .stan__head
      .eye-default
        .eye-default__pupil
      .eye-default.eye-default--left
        .eye-default__pupil
      .mouth-container
        .mouth-sad
    .hat-wrapper
      .stan-hat
        .stan-hat__bottom
        .stan-hat__pompom-container
          - for(var i = 0; i < 8; i++)
            div
    .stan__legs
      .stan__foot.stan__foot--left
      .stan__foot.stan__foot--right
    .stan__arm
      .stan__hand
        .stan__thumb
    .stan__arm--left
      .stan__hand
        .stan__thumb

